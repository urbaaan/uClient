{
  "name": "uclient",
  "version": "1.0.2",
  "description": "Venge.io Client",
  "main": "main.js",
  "author": "Urban",
  "repository": "https://github.com/VengeUrban/uClient",
  "scripts": {
    "start": "electron . ",
    "postinstall": "install-app-deps",
    "dist": "electron-builder --x64 --ia32",
    "mac": "electron-builder -m",
    "linux": "electron-builder -l"
  },
  "license": "GPL-2.0",
  "build": {
    "appId": "org.electron.uClient",
    "asar": true,
    "productName": "uClient",
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png",
      "publish": [
        {
          "provider": "github",
          "url": "https://github.com/VengeUrban/uClient/releases"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "license": "",
      "artifactName": "uClient-win-setup.${ext}",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "shortcutName": "uClient"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.png"
    },
    "dmg": {
      "title": "uClient",
      "artifactName": "uClient-mac.dmg"
    },
    "linux": {
      "target": "deb",
      "icon": "assets/logo.png"
    },
    "deb": {}
  },
  "dependencies": {
    "discord-rpc": "^3.1.4",
    "electron-localshortcut": "^3.2.1",
    "electron-prompt": "^1.6.0",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.2",
    "v8-compile-cache": "^2.1.1"
  },
  "devDependencies": {
    "electron": "^9",
    "electron-builder": "^22.8.0"
  }
}
